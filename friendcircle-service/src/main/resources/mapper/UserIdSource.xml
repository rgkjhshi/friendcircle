<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mapper.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mk.friendcircle.dao.mapper.UserIdSourceMapper">

    <!-- 通过字段名字映射 -->
    <sql id="base_select">
        SELECT
        id    AS id
        FROM user_id_source
    </sql>

    <!-- 查询条件 -->
    <sql id="where_condition">
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
        </where>
    </sql>

    <insert id="add" parameterType="UserIdSource" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_id_source (id) VALUES (NULL);
    </insert>

    <select id="queryOne" parameterType="UserIdSource" resultType="UserIdSource">
        <include refid="base_select"/>
        <include refid="where_condition"/>
    </select>

</mapper>
