<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mapper.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mk.friendcircle.dao.UserRelationDao">

    <!-- 通过字段名字映射 -->
    <sql id="base_select">
        SELECT
        id                 AS id,
        user_id            AS userId,
        friend_id          AS friendId,
        relation_status    AS relationStatus,
        create_time        AS createTime,
        update_time        AS updateTime
        FROM user_relation
    </sql>

    <!-- 查询条件 -->
    <sql id="where_condition">
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="friendId != null">
                AND friend_id = #{friendId}
            </if>
            <if test="relationStatus != null">
                AND relation_status = #{relationStatus}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                AND update_time = #{updateTime}
            </if>
        </where>
    </sql>

    <insert id="add" parameterType="UserRelation" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_relation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="friendId != null">
                friend_id,
            </if>
            <if test="relationStatus != null">
                relation_status,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="friendId != null">
                #{friendId},
            </if>
            <if test="relationStatus != null">
                #{relationStatus},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
        </trim>
    </insert>

    <!-- 通过主键id更新 -->
    <update id="updateById" parameterType="UserRelation">
        UPDATE payment
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="friendId != null">
                friend_id = #{friendId},
            </if>
            <if test="relationStatus != null">
                relation_status = #{relationStatus},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="queryOne" parameterType="UserRelation" resultType="UserRelation">
        <include refid="base_select"/>
        <include refid="where_condition"/>
    </select>

    <select id="queryList" parameterType="UserRelation" resultType="UserRelation">
        <include refid="base_select"/>
        <include refid="where_condition"/>
    </select>

</mapper>
